<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Gym | Payments</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/dashMain.css" />
    <link rel="stylesheet" type="text/css" href="/css/entypo.css" />
    <link href="/css/a1style.css" type="text/css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
  </head>
  <body class="page-body page-fade">
    <div class="page-container sidebar-collapsed">
      <div class="sidebar-menu">
        <header class="logo-env">
          <div class="sidebar-collapse" onclick="collapseSidebar()">
            <a href="#" class="sidebar-collapse-icon with-animation">
              <i class="entypo-menu"></i>
            </a>
          </div>
        </header>
        <%- include('partials/nav') %>
      </div>
      <div class="main-content">
        <div class="row">
          <div class="col-md-6 col-sm-8 clearfix"></div>
          <div class="col-md-6 col-sm-4 clearfix hidden-xs">
            <ul class="list-inline links-list pull-right">
              <li>Welcome <%= full_name %></li>
              <li>
                <a href="/logout"
                  >Log Out <i class="entypo-logout right"></i
                ></a>
              </li>
            </ul>
          </div>
        </div>
        <h2>Payments</h2>
        <hr />
        <% if (messages.error) { %>
        <p style="color: red"><%= messages.error %></p>
        <% } %> <% if (messages.success) { %>
        <p style="color: green"><%= messages.success %></p>
        <% } %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Payment ID</th>
              <th>Membership ID</th>
              <th>Name</th>
              <th>New Plan</th>
              <th>Amount</th>
              <th>Validity</th>
              <th>Payment Date</th>
            </tr>
          </thead>
          <tbody>
            <% payments.forEach(payment => { %>
            <tr>
              <td><%= payment.payment_id %></td>
              <td><%= payment.membership_id %></td>
              <td><%= payment.name %></td>
              <td><%= payment.new_plan %></td>
              <td><%= payment.amount %></td>
              <td><%= payment.validity %></td>
              <td><%= payment.payment_date %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <a href="/payments/add" class="btn btn-primary">Add New Payment</a>
        <%- include('partials/footer') %>
      </div>
    </div>
  </body>
</html>
